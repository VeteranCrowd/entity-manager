{
  "author": "Jason Williscroft",
  "bugs": {
    "url": "https://github.com/karmaniverous/entity-manager/issues"
  },
  "dependencies": {
    "@karmaniverous/mock-db": "file:../mock-db",
    "@karmaniverous/string-utilities": "^0.2.0",
    "jsonschema": "^1.4.1",
    "lz-string": "^1.5.0",
    "radash": "^12.1.0",
    "string-hash": "^1.1.3",
    "zod": "^3.23.8"
  },
  "description": "Configurably decorate entity objects with sharded index keys.",
  "devDependencies": {
    "@dotenvx/dotenvx": "^1.14.0",
    "@eslint/js": "^9.9.1",
    "@faker-js/faker": "^8.4.1",
    "@rollup/plugin-alias": "^5.1.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/chai": "^4.3.19",
    "@types/eslint__js": "^8.42.3",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-mocha": "^10.4.0",
    "@types/mocha": "^10.0.7",
    "@types/node": "^22.5.1",
    "@types/string-hash": "^1.1.3",
    "auto-changelog": "^2.4.0",
    "chai": "^5.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mocha": "^10.5.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tsdoc": "^0.3.0",
    "jsdom-global": "^3.0.2",
    "knip": "^5.27.4",
    "lefthook": "^1.7.14",
    "mocha": "^10.7.3",
    "nyc": "^17.0.0",
    "prettier": "^3.3.3",
    "release-it": "^17.6.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.21.2",
    "rollup-plugin-dts": "^6.1.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tslib": "^2.7.0",
    "typedoc": "^0.26.6",
    "typedoc-plugin-mdn-links": "^3.2.11",
    "typedoc-plugin-replace-text": "^4.0.0",
    "typedoc-plugin-zod": "^1.2.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.3.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/mjs/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/karmaniverous/entity-manager#readme",
  "keywords": [
    "dynamo-db",
    "sharding"
  ],
  "license": "BSD-3-Clause",
  "main": "dist/cjs/index.js",
  "module": "dist/mjs/index.js",
  "name": "@karmaniverous/entity-manager",
  "publishConfig": {
    "access": "public"
  },
  "release-it": {
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/main/templates/changelog-compact.hbs",
      "commitMessage": "chore: release v${version}",
      "requireBranch": "main"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p",
      "after:init": [
        "npm run lint",
        "npm run test",
        "npm run build",
        "npm run docs",
        "git add -A",
        "git commit -m \"updated docs\""
      ],
      "after:release": [
        "git switch -c release/${version}",
        "git push -u origin release/${version}",
        "git switch ${branchName}"
      ]
    },
    "npm": {
      "publish": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/karmaniverous/entity-manager.git"
  },
  "scripts": {
    "build": "rimraf dist && rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "docs": "typedoc",
    "knip": "knip",
    "lint": "eslint src/** && prettier -c src",
    "lint:fix": "eslint --fix src/** && prettier --write src",
    "release": "dotenvx run -f .env.local -- release-it",
    "release:pre": "dotenvx run -f .env.local -- release-it --no-git.requireBranch --github.prerelease --preRelease",
    "test": "dotenvx run --quiet --log-level=LOG_LEVEL=debug -- nyc mocha"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "version": "5.0.9"
}
